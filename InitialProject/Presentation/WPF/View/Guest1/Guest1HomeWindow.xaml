<Window x:Class="InitialProject.Presentation.WPF.View.Guest1.Guest1HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.Presentation.WPF.View.Guest1" 
        xmlns:guest1="clr-namespace:InitialProject.Presentation.WPF.ViewModel.Guest1"
        d:DataContext="{d:DesignInstance Type=guest1:Guest1HomeWindowViewModel}"
        mc:Ignorable="d"
        Title="Guest1HomeWindow" Height="850" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.InputBindings>
        <KeyBinding Key="F3" Command="{Binding OpenAccommodationDisplay_Command}" />
        <KeyBinding Key="F4" Command="{Binding  OpenForums_Command}" />
        <KeyBinding Key="F5" Command="{Binding OpenMyRatings_Command}" />
        <KeyBinding Key="F7" Command="{Binding OpenAccommodationDisplay_Command}" />
        <KeyBinding Key="F8" Command="{Binding OpenOwnerRating_Command}" />
        <KeyBinding Key="F9" Command="{Binding OpenChangeReservation_Command}" />
        <KeyBinding Key="F10" Command="{Binding OpenCancelReservation_Command}" />
        <KeyBinding Key="F11" Command="{Binding OpenAnywhereAnytime_Command}" />
        <KeyBinding Key="F12" Command="{Binding OpenForumCreate_Command}" />
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" FontSize="15" Margin="0,2,0,0">
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Margin" Value="10,0,10,0" />
                </Style>
            </Menu.Resources>
            <MenuItem Header="Home (F2)"/>
            <MenuItem Header="Accommodation (F3)" Command="{Binding OpenAccommodationDisplay_Command}"/>
            <MenuItem Header="Forum (F4)" Command="{Binding OpenForums_Command}"/>
            <MenuItem Header="My Ratings (F5)" Command="{Binding OpenMyRatings_Command}"/>
            <MenuItem Header="Reservations (F6)"/>
            <MenuItem Header="Log Out" Command="{Binding LogUserOut_Commend}"/>
        </Menu>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,0,1">
            <Rectangle Width="1200" Height="120" Fill="LightGray" VerticalAlignment="Top" Margin="0,0,0,0"/>
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Width="380" Height="550" Margin="0,60,0,0">
                <StackPanel>
                    <Image Source="/Infrastructure/Resources/Images/female_profile.png" Width="90" Height="100" Margin="0,20,0,0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Welcome, " FontSize="14"/>
                        <TextBlock Text="{Binding Username}" FontSize="14"/>
                    </StackPanel>
                    <Grid Margin="20,40,20,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Make a reservation/ Search for accommodations"
                            Width="200" TextWrapping="Wrap" HorizontalAlignment="Left" FontSize="14"/>
                        <TextBlock Text="F7" FontWeight="DemiBold" Grid.Column="1" HorizontalAlignment="Right" FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Margin="20,10,20,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Rate owner and accommodation"
                            Width="200" TextWrapping="Wrap" HorizontalAlignment="Left" FontSize="14"/>
                        <TextBlock Text="F8" FontWeight="DemiBold" Grid.Column="1" HorizontalAlignment="Right" FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Margin="20,10,20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Change reservation"
                            Width="200" TextWrapping="Wrap" HorizontalAlignment="Left" FontSize="14"/>
                        <TextBlock Text="F9" FontWeight="DemiBold" Grid.Column="1" HorizontalAlignment="Right" FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Margin="20,10,20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Cancel reservation"
                            Width="200" TextWrapping="Wrap" HorizontalAlignment="Left" FontSize="14"/>
                        <TextBlock Text="F10" FontWeight="DemiBold" Grid.Column="1" HorizontalAlignment="Right" FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Margin="20,10,20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Anywhere/Anytime"
                            Width="200" TextWrapping="Wrap" HorizontalAlignment="Left" FontSize="14"/>
                        <TextBlock Text="F11" FontWeight="DemiBold" Grid.Column="1" HorizontalAlignment="Right" FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Margin="20,10,20,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Create forum"
                            Width="200" TextWrapping="Wrap" HorizontalAlignment="Left" FontSize="14"/>
                        <TextBlock Text="F12" FontWeight="DemiBold" Grid.Column="1" HorizontalAlignment="Right" FontSize="14" VerticalAlignment="Center"/>
                    </Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,70,0,0">
                        <TextBlock Text="Points: " FontSize="14" />
                        <TextBlock Text="{Binding Points}" FontSize="14" FontWeight="DemiBold" Foreground="Green"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,5,0,0">
                        <TextBlock Text="Super-Guest Status: " FontSize="14"/>
                        <TextBlock Text="{Binding Superguest}" FontSize="14" FontWeight="DemiBold" Foreground="Green"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <GridSplitter Width="5" Background="DarkGray" HorizontalAlignment="Left" ResizeBehavior="PreviousAndNext" Margin="447,0,0,0" Grid.ColumnSpan="2"/>
            <StackPanel Grid.Column="1" Margin="20,90,20,20">
                <TextBlock Text="Upcoming reservations" FontSize="42" HorizontalAlignment="Center" FontWeight="DemiBold" Margin="0,0,0,20"/>

                <DataGrid Height="450" Width="680" HorizontalAlignment="Center"
                      ItemsSource="{Binding Path = Reservations, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding Path= SelectedReservation, UpdateSourceTrigger=PropertyChanged}"
                      IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False"
                          FontSize="16">
                    <DataGrid.Columns>
                        <DataGridTextColumn  FontSize="16" Header="Accommodation name" Width="0.7*" Binding="{Binding AccommodationName}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Country" Width="0.5*" Binding="{Binding Country}"></DataGridTextColumn>
                        <DataGridTextColumn Header="City" Width="0.5*" Binding="{Binding City}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Check-in date" Width="0.5*" Binding="{Binding CheckInDate}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Check-out date" Width="0.5*" Binding="{Binding CheckOutDate}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Margin="0,10,0,0" Text="F1-for Help" FontSize="14" Foreground="Blue" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
