<Window x:Class="InitialProject.Presentation.WPF.View.Owner.DeclineRequest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.Presentation.WPF.View.Owner"
        mc:Ignorable="d"
        Title="DeclineRequest" Height="200" Width="300">
    <Grid>
        <Label>Add comment:</Label>
        <TextBox x:Name="CommentBox" Margin="14,28,18,49" Text="{Binding Path=Comment, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="120,149,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
