        <Grid x:Name="AllAccommodations" Grid.Row="2" Grid.Column="1">
         <Grid.Background>
                <ImageBrush ImageSource="/Infrastructure/Resources/Images/LisceBato.jpg"/>
         </Grid.Background> 
            <Grid Visibility="Collapsed">
                <Label  FontSize="20" Foreground="#00A76D" FontStyle="Italic"  Padding="10"  FontWeight="Bold" Height="55" VerticalAlignment="Top" Margin="2,12,-2,0">Your accommodations:</Label>
                <DataGrid ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" Background="#00A76D"  Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}"  RowStyle="{DynamicResource DataGridRowStyle2}"  x:Name="OwnerAccommodations"  ItemsSource="{Binding Path = Accommodations, UpdateSourceTrigger=PropertyChanged}" Margin="0,79,0,0"
                    IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" VerticalAlignment="Top" HorizontalAlignment="Center" Width="1030" Height="476">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"  Width="*" Binding="{Binding Name}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Country" Width="*" Binding="{Binding Location.Country}"></DataGridTextColumn>
                        <DataGridTextColumn Header="City" Width="*" Binding="{Binding Location.City}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Accommodation Type" Width="*" Binding="{Binding TypeOfAccommodation}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Max. Number of guests" Width="*" Binding="{Binding MaxGuestNumber}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Min. Days To Reserve" Width="*" Binding="{Binding MinReservationDays}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <DockPanel Background="#F5FEFD" x:Name="AddAccommodation" Grid.Row="2" Grid.Column="1" Visibility="Collapsed">
                <Grid DockPanel.Dock="Left" Width="397">
                    <Grid.RowDefinitions>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label FontSize="10" Foreground="#00A76D" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">Naziv smestaja:</Label>
                    <Label FontSize="10" Foreground="#00A76D" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"  >Drzava:</Label>
                    <Label FontSize="10" Foreground="#00A76D" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" >Grad:</Label>
                    <Label FontSize="10" Foreground="#00A76D" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" >Tip smestaja:</Label>
                    <Label FontSize="10" Foreground="#00A76D" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">Maksimalan broj gostiju:</Label>
                    <Label FontSize="10" Foreground="#00A76D" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">Minimalni broj dana za rezervaciju:</Label>
                    <Label FontSize="10" Foreground="#00A76D" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">Broj dana za otkazivanje:</Label>

                    <TextBox BorderBrush="#00A76D" Grid.Column="1" Text="{Binding Path = AccommodationName, Mode=OneWayToSource }" HorizontalAlignment="Center" VerticalAlignment="Center" Width="198" Height="26"  />
                    <ComboBox BorderBrush="#00A76D" x:Name="CountryComboBox" Grid.Row="1" Grid.Column="1" IsEditable="True" IsTextSearchEnabled="True" ItemsSource = "{Binding Path = Countries }" VerticalAlignment="Center" HorizontalAlignment="Center" Width="199" Height="26" />
                    <ComboBox BorderBrush="#00A76D" x:Name ="CityComboBox" Grid.Row="2" Grid.Column="2" IsEditable="True" ItemsSource="{Binding Path= Cities }" Grid.ColumnSpan="2" Width="199" Height="26"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ComboBox BorderBrush="#00A76D" x:Name="TypeComboBox" Grid.Row="3" Grid.Column="3" IsEditable="True" Width="198" Height="26"  VerticalAlignment="Center" HorizontalAlignment="Center"  >
                        <ComboBoxItem>House</ComboBoxItem>
                        <ComboBoxItem>Shack</ComboBoxItem>
                        <ComboBoxItem>Appartment</ComboBoxItem>
                    </ComboBox>
                    <TextBox BorderBrush="#00A76D" Grid.Row="4" Grid.Column="1"  Text="{Binding Path=AccommodationMaxGuests ,Mode=OneWayToSource}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="198" Height="26" />
                    <TextBox BorderBrush="#00A76D" Grid.Row="5" Grid.Column="1" Text="{Binding Path=AccommodationReservationMinDays,Mode=OneWayToSource}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="194" Height="26" />
                    <TextBox BorderBrush="#00A76D" Grid.Row="6" Grid.Column="1" Text="{Binding Path=AccommodationCancelationDays , Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="198" Height="26" />
                </Grid>

                <Grid DockPanel.Dock="Right">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="39*"></RowDefinition>
                            <RowDefinition Height="57*"></RowDefinition>
                            <RowDefinition Height="394*"></RowDefinition>
                            <RowDefinition Height="92*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label FontSize="10" Foreground="#00A76D" FontStyle="Italic" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="175" Margin="0,17,0,0" Grid.RowSpan="2">Url linkovi slika za novi smestaj:</Label>
                        <TextBox BorderBrush="#00A76D" x:Name="UrlTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="435" Height="30" Grid.Row="1" Margin="79,16,0,0" />
                        <Button Content="Add" HorizontalAlignment="Left" Margin="524,16,0,0"  VerticalAlignment="Top" Height="30" Width="94" Click="AddUrl_ButtonClick" Grid.Row="1"
                            FontFamily="Montserrat" Foreground="White"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#00A76D"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#006C6D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                        CornerRadius="10"
                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Grid Grid.Row="2">
                            <DataGrid ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" Background="#00A76D"  Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}"  RowStyle="{DynamicResource DataGridRowStyle2}" ItemsSource="{Binding Path=Images}"  IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" Grid.Row="2" Margin="79,0,28,0" Height="312">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Accommodation Url" Width="*" Binding="{Binding Url}"></DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>


                        <Button Content="Save" Width="176" Height="30" HorizontalAlignment="Left"  Click="SaveNewAccommodation_ButtonClick" Grid.Row="3"  VerticalAlignment="Top" Margin="264,26,0,0"
                            FontFamily="Montserrat" Foreground="White"
                             Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#00A76D"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#006C6D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                        CornerRadius="10"
                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </DockPanel>

