                        HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button  Grid.Row ="2" Content="Requests" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="176" Height="34" 
                FontFamily="Montserrat" Foreground="White"
                Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#00A76D"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#006C6D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                        CornerRadius="10"
                        Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
        </Grid>

        <Grid x:Name="AllAccommodations"  Grid.Row="2" Grid.Column="1">
            <Grid Visibility="Collapsed">
                <Label  FontSize="20" Foreground="GhostWhite" FontStyle="Italic"  Padding="10"  FontWeight="Bold" Height="55" VerticalAlignment="Top" Margin="2,12,-2,0">Your accommodations:</Label>
                <DataGrid ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" Background="DeepSkyBlue"  Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}"  RowStyle="{DynamicResource DataGridRowStyle2}"  x:Name="OwnerAccommodations"  ItemsSource="{Binding Path = Accommodations, UpdateSourceTrigger=PropertyChanged}"  Margin="0,79,0,0"
                    IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" VerticalAlignment="Top" HorizontalAlignment="Center" Width="1030" Height="476" SelectedItem="{Binding StartSelectedAccommodation}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"  Width="*" Binding="{Binding Name}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Country" Width="*" Binding="{Binding Location.Country}"></DataGridTextColumn>
                        <DataGridTextColumn Header="City" Width="*" Binding="{Binding Location.City}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Accommodation Type" Width="*" Binding="{Binding TypeOfAccommodation}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Max. Number of guests" Width="*" Binding="{Binding MaxGuestNumber}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Min. Days To Reserve" Width="*" Binding="{Binding MinReservationDays}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <DockPanel  x:Name="AddAccommodation" Grid.Row="2" Grid.Column="1" Visibility="Collapsed">
                
                <Grid DockPanel.Dock="Left" Width="397">
                    <Grid.RowDefinitions>
                        <RowDefinition ></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label FontSize="10" Foreground="GhostWhite" FontStyle="Italic" FontWeight="Bold" Padding="10" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,27,0,0">Accommodation name:</Label>
                    <Label FontSize="10" Foreground="GhostWhite" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"  >Country:</Label>
                    <Label FontSize="10" Foreground="GhostWhite" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,23,0,0" >City:</Label>
                    <Label FontSize="10" Foreground="GhostWhite" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,18,0,0" >Type:</Label>
                    <Label FontSize="10" Foreground="GhostWhite" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,19,0,0">Maximum guest number:</Label>
                    <Label FontSize="10" Foreground="GhostWhite" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="5" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,18,0,0">Minimum days for reservation:</Label>
                    <Label FontSize="10" Foreground="GhostWhite" FontStyle="Italic" FontWeight="Bold" Padding="10" Grid.Row="6" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,18,0,0">Days for canncelation:</Label>

                    <StackPanel  Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,31,0,0">
                        <TextBox BorderBrush="#00A76D" Grid.Column="1" Text="{Binding  NewAccommodation.AccommodationName, Mode=TwoWay }" HorizontalAlignment="Center" VerticalAlignment="Center" Width="198" Height="26"  />
                        <TextBlock Text="{Binding NewAccommodation.ValidationErrors[AccommodationName]}" Foreground="Red" ></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="198,31,0,0">
                        <ComboBox BorderBrush="#00A76D" x:Name="CountryComboBox" Grid.Row="1" Grid.Column="1" IsEditable="True" IsTextSearchEnabled="True" ItemsSource = "{Binding Path = Countries }" Text ="{Binding NewAccommodation.AccommodationCountry, Mode=TwoWay}"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="199" Height="26" />
                        <TextBlock Text="{Binding NewAccommodation.ValidationErrors[AccommodationCountry]}" Foreground="Red"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="77" Margin="198,78,0,0" Grid.RowSpan="2">
                        <ComboBox BorderBrush="#00A76D" x:Name ="CityComboBox" Grid.Row="2" Grid.Column="1" IsEditable="True" ItemsSource="{Binding Path= Cities }" Text="{Binding NewAccommodation.AccommodationCity,Mode=TwoWay}" Width="199" Height="26" HorizontalAlignment="Center" Margin="0,29,0,0"/>
                        <TextBlock Text="{Binding NewAccommodation.ValidationErrors[AccommodationCity]}" Foreground="Red"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" Orientation="Vertical">
                        <ComboBox BorderBrush="#00A76D" x:Name="TypeComboBox"  IsEditable="True" Width="198" Height="26" Text="{Binding NewAccommodation.AccommodationType}"  VerticalAlignment="Center" HorizontalAlignment="Center"  >
                            <ComboBoxItem>House</ComboBoxItem>
                            <ComboBoxItem>Shack</ComboBoxItem>
                            <ComboBoxItem>Appartment</ComboBoxItem>
                        </ComboBox>
                        <TextBlock Text="{Binding NewAccommodation.ValidationErrors[AccommodationType]}" Foreground="Red"></TextBlock>
                    </StackPanel >
                    <StackPanel  Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBox BorderBrush="#00A76D" Grid.Row="4" Grid.Column="1"  Text="{Binding NewAccommodation.AccommodationMaxGuests ,Mode=TwoWay}" HorizontalAlignment="Center" Width="198" Height="26" />
                        <TextBlock Text="{Binding NewAccommodation.ValidationErrors[AccommodationMaxGuests]}" Foreground="Red"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBox BorderBrush="#00A76D" Grid.Row="5" Grid.Column="1" Text="{Binding NewAccommodation.AccommodationReservationMinDays,Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="194" Height="26" />
                        <TextBlock Text="{Binding NewAccommodation.ValidationErrors[AccommodationReservationMinDays]}" Foreground="Red"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" Orientation="Vertical">
                        <TextBox BorderBrush="#00A76D" Grid.Row="6" Grid.Column="1" Text="{Binding NewAccommodation.AccommodationCancelationDays , Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="198" Height="26" />
                        <TextBlock Text="{Binding NewAccommodation.ValidationErrors[AccommodationCancelationDays]}" Foreground="Red"></TextBlock>
                    </StackPanel >
                </Grid>

                <Grid DockPanel.Dock="Right">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="39*"></RowDefinition>
                            <RowDefinition Height="57*"></RowDefinition>
                            <RowDefinition Height="394*"></RowDefinition>
                            <RowDefinition Height="92*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label FontSize="10" Foreground="GhostWhite" FontStyle="Italic" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Height="26" Width="175" Margin="0,17,0,0" Grid.RowSpan="2">Url links for accommodation:</Label>
                        <TextBox BorderBrush="GhostWhite" x:Name="UrlTextBox" HorizontalAlignment="Left" Text="{Binding AccommodationUrl , Mode=TwoWay}" VerticalAlignment="Top" Width="435" Height="30" Grid.Row="1" Margin="79,16,0,0" />
                        <Button Content="Add" HorizontalAlignment="Left" Margin="524,16,0,0"  VerticalAlignment="Top" Height="30" Width="94"  Grid.Row="1"
                            Command="{Binding AddUrl}"
                            FontFamily="Montserrat" Foreground="GhostWhite"
                            Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="DeepSkyBlue"></Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="DarkSlateBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                        CornerRadius="10"
                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="579*"/>
                                <ColumnDefinition Width="73*"/>
                            </Grid.ColumnDefinitions>
                            <DataGrid ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" Background="DeepSkyBlue"  Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}"  RowStyle="{DynamicResource DataGridRowStyle2}" ItemsSource="{Binding Path=Images}"  IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" Margin="79,0,28,0" Height="312" Grid.ColumnSpan="2">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Accommodation Url" Width="*" Binding="{Binding Url}"></DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>


                        <Button Content="Save" Width="176" Height="30" HorizontalAlignment="Left"   Grid.Row="3"  VerticalAlignment="Top" Margin="264,26,0,0"
                            Command ="{Binding SaveNewAccommodation}"
                            FontFamily="Montserrat" Foreground="White"
                             Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="DeepSkyBlue"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="DarkSlateBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                        CornerRadius="10"
                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </DockPanel>

            <DockPanel  x:Name="GuestsToReview" Grid.Column="1" Grid.Row="2" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label  Grid.Row ="0" FontSize="15" Foreground="White" FontStyle="Italic" FontWeight="Bold"  Padding="10"  DockPanel.Dock="Top" Height="40" Margin="50,47,-50,107" >You can review:</Label>
                    <Button  Grid.Row ="2" DockPanel.Dock="Bottom" Content="Review" Margin="462,97,475,59" 
                        Command ="{Binding ReviewGuest}"
                        FontFamily="Montserrat" Foreground="GhostWhite"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="DeepSkyBlue"></Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="DarkSlateBlue"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
