        <Image Source="/Infrastructure/Resources/Images/BookBuddy_logo1.png" Margin="5,46,1102,592" Height="50"  Grid.RowSpan="2"/>

        <ComboBox x:Name ="Jezik"  ItemsSource="{Binding Localization}"  IsEditable="False" IsReadOnly="True" SelectedIndex="0" HorizontalAlignment="Left" Margin="1194,0,0,0" VerticalAlignment="Center" Width="109"/>
