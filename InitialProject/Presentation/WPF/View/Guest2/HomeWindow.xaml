                                <ComboBox x:Name ="Duration_Box_Tolm" FontSize="12" SelectedItem="{Binding SelectedDurationTo}" IsEditable="True" IsReadOnly="True" Text="Trajanje do"  ItemsSource="{Binding Duration}" HorizontalAlignment="Left" Margin="20,0,0,0"  Width="90"  Height="25"/>
                            </StackPanel>
                            <Button Content="Pretrazi" Foreground="White" FontSize="16" Cursor="Hand" Click="ApplyFilters_Click" HorizontalAlignment="Left" Margin="33,0,0,0" VerticalAlignment="Top" Width="200" Height="40">
                                <Button.Style>
