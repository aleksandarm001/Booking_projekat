<Window x:Class="InitialProject.View.TourReservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View"
        mc:Ignorable="d"
        Title="TourReservation" Height="250" Width="400">
    <Grid>
        <TextBlock Text="Unesite broj gostiju za koji zelite da rezervisete izabranu turu!" Margin="10,20,0,0"/>
        <TextBox Text="{Binding Path=NumberOfGuests,Mode=TwoWay}" Margin="175,54,135,117"/>
        <Button Content="Potvrdi" Click="Potvrdi_Click" HorizontalAlignment="Left" Margin="80,180,0,0" VerticalAlignment="Top" Width="70" Height="30"/>
        <Button Content="Odustani" Click="Odustani_Click" HorizontalAlignment="Left" Margin="230,180,0,0" VerticalAlignment="Top" Width="70" Height="30"/>


    </Grid>
</Window>
